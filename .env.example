# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_server_id_here

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/crypto_escrow?schema=public"

# Redis Configuration (optional, for caching)
REDIS_URL="redis://localhost:6379"

# Blockchain API Keys
# Bitcoin
BITCOIN_NETWORK=testnet  # mainnet or testnet
BLOCKSTREAM_API_URL=https://blockstream.info/testnet/api

# Ethereum (Alchemy or Infura)
ETHEREUM_NETWORK=goerli  # mainnet, goerli, sepolia
ALCHEMY_API_KEY=your_alchemy_api_key_here
INFURA_API_KEY=your_infura_api_key_here

# Solana
SOLANA_NETWORK=devnet  # mainnet-beta, devnet, testnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Litecoin
LITECOIN_NETWORK=testnet  # mainnet or testnet
BLOCKCYPHER_API_KEY=your_blockcypher_api_key_here

# Security
ENCRYPTION_KEY=your_256_bit_encryption_key_here  # Generate with: openssl rand -hex 32
MASTER_SEED_PHRASE=your 24 word mnemonic seed phrase here  # Generate and BACKUP SECURELY

# Bot Configuration
BOT_FEE_PERCENTAGE=2.0  # 2% fee
MIN_CONFIRMATIONS_BTC=3
MIN_CONFIRMATIONS_ETH=12
MIN_CONFIRMATIONS_SOL=32
MIN_CONFIRMATIONS_LTC=6

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321  # Comma-separated Discord user IDs

# Environment
NODE_ENV=development  # development, production
LOG_LEVEL=info  # error, warn, info, debug

# Hot Wallet Limits (in USD equivalent)
HOT_WALLET_MAX_BALANCE=10000
AUTO_TRANSFER_THRESHOLD=5000

